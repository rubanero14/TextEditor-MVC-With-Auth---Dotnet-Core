@model TextEditor.Models.Document

@* Get User ID from Current Session *@
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager; 

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Document</h1>
<div class="row">
    <div class="col-md-9 card py-3 px-3 bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input asp-for="Title" class="form-control" placeholder="Set title for your document.." value="Untitled Document"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <textarea id="tiny" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control"  type="hidden" value="@userManager.GetUserId(User)"/>
            </div>
            <div class="d-inline-block d-md-flex justify-content-apart w-100">
                <input type="submit" value="Create" class="btn btn-success mb-2 mb-md-0 me-2 w-100" />
                <a asp-action="Index" class="btn btn-secondary mb-2 mb-md-0 w-100 w-md-50">Back to List</a>
            </div>
        </form>
    </div>
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
