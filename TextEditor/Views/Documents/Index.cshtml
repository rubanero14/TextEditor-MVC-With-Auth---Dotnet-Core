@model IEnumerable<TextEditor.Models.Document>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex align-items-center justify-content-center mb-3">
    <a asp-action="Create" class="btn btn-light p-3 card" style="min-height:100px;width:200px;background:green;font-size:1rem;" title="Create Blank Document">
        <h4 class="text-center mb-0 text-light" style="font-size: 6rem">+</h4>
        <hr />
        <span class="text-light" style="font-size:1rem;word-wrap:break-word">Create Blank Document</span>
    </a>
</div>
<hr />
<div class="d-flex align-items-center justify-content-center">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <a asp-action="Details" style="height:200px;width:200px;background:pink;font-size:0.8rem;flex-wrap:wrap;text-decoration:none;" 
                asp-route-id="@item.Id" class="p-3 me-2 card" title="@item.Title">
                <div class="d-flex justify-content-center align-items-center">
                    <img src="https://cdn-icons-png.flaticon.com/128/2991/2991112.png" loading="lazy" alt="Google docs " title="Google docs " width="64" height="64">
                </div>
                <hr />
                <h4 class="text-center text-secondary" style="word-wrap:break-word">@item.Title</h4>
            </a>
        }
        
    }
    else
    {
        <div class="text-center">
            <h4 class="text-center">No documents found.</h4>
        </div>
    }
    
</div>

