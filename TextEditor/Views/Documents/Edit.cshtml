@model TextEditor.Models.Document;
    
@{
    ViewData["Title"] = "Edit " + @Model.Title;
}

<h1>Edit Document</h1>
<div class="row">
    <div class="col-md-9 card py-3 px-3 bg-light">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input asp-for="Title" class="form-control" placeholder="Set title for your document.." value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <textarea id="tiny" asp-for="Content" value="@Model.Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserId" class="form-control" type="hidden"/>
            </div>
            <div class="d-inline-block d-md-flex justify-content-apart w-100">
                <input type="submit" value="Save" class="btn btn-success mb-2 mb-md-0 me-2 w-100 w-md-50" />
                @* <a asp-action="Delete" class="btn btn-danger mb-2 mb-md-0 w-100 w-md-50" asp-route-id="@Model.Id">Delete</a> *@
                <a asp-action="Index" class="btn btn-secondary mb-2 mb-md-0 w-100 w-md-50 me-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
